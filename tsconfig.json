{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"lib": ["esnext", "es2015", "dom"],
		"allowJs": false
	},
	"include": ["src", "tests/*.ts"],
	"exclude": [
		"node_modules",
		"dist"
	]
}